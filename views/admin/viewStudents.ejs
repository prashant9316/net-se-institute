<%- include('./common/header.ejs') %>






<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Dashboard /</span> Students</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
      <h5 class="card-header">All Students</h5>
      <div class="card">
        <div class="card-body">
          <div class="row g-4">
            <div class="col-md-8">
              <small class="text-light fw-semibold">Course/Branch</small>
              <div class="mt-3">
                <div class="btn-group" role="group" aria-label="Basic example">
                  <button type="button" class="btn btn-outline-secondary" onclick="window.location.href = '/admin/dashboard/<%= admin.collegeId %>/view-all-students'">All</button>
                  <% for(var i = 0; i < courses.length; i++) {%>
                    <button type="button" class="btn btn-outline-secondary" onclick="window.location.href = '/admin/dashboard/<%= admin.collegeId %>/students/<%= courses[i].courseId %>'"><%= courses[i].courseName %></button>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
        </div>
        
      
      <div class="table-responsive text-nowrap">
        <table class="table">
          <thead>
            <tr>
              <th>Course</th>
              <th>Enroll no.</th>
              <th>Name</th>
              <th>Gender</th>
              <th>Profile</th>
              <th>Attendance</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">
              <% for(var i = 0; i < students.length; i++) { %>
            <tr>
              <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%= students[i].course.courseName %></strong></td>
              <td><%= students[i].enrollmentNumber %></td>
              <td><%= students[i].name %></td>
              <td><%= students[i].gender %></td>
              <td>
                <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                  <!-- <li
                    data-bs-toggle="tooltip"
                    data-popup="tooltip-custom"
                    data-bs-placement="top"
                    class="avatar avatar-xs pull-up"
                    title="Lilian Fuller"
                  >
                    <img src="/assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                  </li>
                  <li
                    data-bs-toggle="tooltip"
                    data-popup="tooltip-custom"
                    data-bs-placement="top"
                    class="avatar avatar-xs pull-up"
                    title="Sophia Wilkerson"
                  >
                    <img src="/assets/img/avatars/6.png" alt="Avatar" class="rounded-circle" />
                  </li> -->
                  <li
                    data-bs-toggle="tooltip"
                    data-popup="tooltip-custom"
                    data-bs-placement="top"
                    class="avatar avatar-xs pull-up"
                    title="<%= students[i].name %>"
                  >
                    <img src="/assets/img/avatars/6.png" alt="Avatar" class="rounded-circle" />
                  </li>
                </ul>
              </td>
              <td><span class="badge bg-label-primary me-1">View</span></td>
              <td>
                <div class="dropdown">
                  <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                    <i class="bx bx-dots-vertical-rounded"></i>
                  </button>
                  <div class="dropdown-menu">
                    <a class="dropdown-item" href="javascript:void(0);"
                      ><i class="bx bx-edit-alt me-1"></i> Edit</a
                    >
                    <a class="dropdown-item" href="javascript:void(0);"
                      ><i class="bx bx-trash me-1"></i> Delete</a
                    >
                  </div>
                </div>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    </div>





<%- include('./common/footer.ejs') %>