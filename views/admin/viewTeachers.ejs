              <th>S. No.</th>
              <th>Name</th>
              <th>Email</th>
              <th>Number</th>
              <th>Gender</th>
              <th>Courses</th>
              <th>Profile</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">
              <% for(var i = 0; i < teachers.length; i++) { %>
            <tr>
              <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%= i + 1 %></strong></td>
              <td><%= teachers[i].name %></td>
              <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <%= teachers[i].emailId %></td>
              <td><i class="fab fa-angular fa-lg text-danger me-3"></i><%= teachers[i].phoneNumber %> </td>
              <td><%= teachers[i].gender %></td>
              <td>B. Tech ____</td>
              <td>
                <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                  <!-- <li
                    data-bs-toggle="tooltip"
                    data-popup="tooltip-custom"
                    data-bs-placement="top"
                    class="avatar avatar-xs pull-up"
                    title="Lilian Fuller"
                  >
                    <img src="/assets/img/avatars/5.png" alt="Avatar" class="rounded-circle" />
                  </li>
                  <li
                    data-bs-toggle="tooltip"
