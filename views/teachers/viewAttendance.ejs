<%- include('./common/header.ejs') %>






<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Dashboard / Students /</span> Attendance </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
      <h5 class="card-header">View Attendance for Students of <%= subject.subjectName %> on <%= attendanceRegister.date.toLocaleDateString() %> | <%= attendanceRegister.date.toLocaleTimeString() %></h5>
        
      <!-- <button class="btn btn-success m-5" id="submit-btn-attendance">Submit Attendance</button> -->
      <div class="table-responsive text-nowrap">
        <table class="table">
          <thead>
            <tr>
              <th>S. No.</th>
              <th>Enroll no.</th>
              <th>Name</th>
              <th>Attendance</th>
            </tr>
          </thead>
          <tbody class="table-border-bottom-0">

            <% for(var i = 0; i < students.length; i++) { %>
                <tr>
                  <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%= i+1 %></strong></td>
                  <td><%= students[i].enrollNumber %></td>
                  <td ><%= students[i].name %></td>
                  <td>
                    
                        <% if(students[i].attendance == 'P') {%>
                            <button class="btn btn-success mx-2" id="btn-<%= students[i].enrollNumber %>">
                        Present
                        </button>
                        <% } else { %>
                            <button class="btn btn-danger mx-2" id="btn-<%= students[i].enrollNumber %>">
                            Absent 
                        </button>
                        <% }%>
                  </td>
                </tr>
                <% } %>
          </tbody>
        </table>
        
    </div>
</div>

</div>
<button class="btn btn-info m-5" id="submit-btn-attendance" onclick="window.location.href = '/teacher/dashboard/<%= teacher.collegeId %>/take-attendance/<%= attendanceRegister.pageId %>'">Edit Attendance</button>





